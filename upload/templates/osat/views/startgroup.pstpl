<!-- Start group -->
<div class="group">
    <div class="group--header">
        <div class="center-min">
            <p class="group--header--title">
                {GROUPNAME}
            </p>
        </div>
    </div>

    <div class="group--intro center">

        <div class="center-min">
            <div class="question-index">
                {QUESTION_INDEX_MENU}
            </div>

            <div class="group--question-header">
                <h3 class="group--index">{QUESTION_NO|str_pad,2,0,STR_PAD_LEFT}</h3>
            </div>

            {PERCENTCOMPLETE}

            <div class="group--description simple--text">
                {GROUPDESCRIPTION}
            </div>

        </div><!-- .center-min //-->
    </div><!-- .group-intro //-->
